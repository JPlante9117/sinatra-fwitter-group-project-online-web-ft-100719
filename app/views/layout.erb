<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>
  <a href='/'><input type='button' value='Home'></a>
  <a href='/tweets'><input type='button' value='All Tweets'></a>
  <% if !logged_in? %>
    <a href='/login'><input type='button' value='Login'></a>
    <a href='/signup'><input type='button' value='Create Account'></a>
  <% else %>
    <a href='/logout'><input type='button' value='Logout'></a>
    <a href='/users/<%= current_user.slug %>'><input type='button' value='My Account'></a>
    <a href='/tweets/new'><input type='button' value='Make New Tweet'></a>
  <% end %>

    <%= yield %>

  </body>
</html>
